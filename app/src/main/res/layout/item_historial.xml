<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- 🎯 Icono de tipo de recomendación -->
        <TextView
            android:id="@+id/txtIconoTipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🏛️"
            android:textSize="24sp"
            android:layout_marginEnd="12dp"
            android:layout_gravity="center_vertical" />

        <!-- 📝 Información de la recomendación -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTituloRecomendacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título de la recomendación"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/txtDescripcionRecomendacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción de la recomendación"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/txtFechaRecomendacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hace 2 días"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:textStyle="italic" />

        </LinearLayout>

        <!-- ⭐ Calificación o acción -->
        <TextView
            android:id="@+id/txtCalificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⭐ 4.5"
            android:textSize="14sp"
            android:textColor="@android:color/holo_orange_dark"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
