<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_app"
    tools:context=".SplashActivity">

    <!-- Overlay semitransparente para mejorar legibilidad -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80FFFFFF" />

    <!-- Contenedor principal centrado -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Logo de la aplicación -->
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo_app"
            android:contentDescription="Logo de Planifica Tu Viaje"
            android:scaleType="fitCenter"
            android:layout_marginBottom="24dp" />

        <!-- Texto principal -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Planifica Tu Viaje"
            android:textColor="@color/blue_primary_dark"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"
            android:shadowColor="@color/white"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <!-- Subtítulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tu compañero de aventuras"
            android:textColor="@color/blue_primary"
            android:textSize="18sp"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:shadowColor="@color/white"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

    </LinearLayout>

    <!-- Loading indicator en la parte inferior -->
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp"
        android:indeterminateTint="@color/blue_primary"
        style="?android:attr/progressBarStyle" />

</RelativeLayout>

