<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/transparent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E6F0F8FF"
        android:padding="24dp"
        android:elevation="4dp"
        android:layout_margin="8dp">

        <!-- Indicador de Progreso -->
        <TextView
            android:id="@+id/tvProgreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paso 1 de 6"
            android:textSize="14sp"
            android:textColor="@color/text_secondary_blue"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>

        <!-- Título del Paso -->
        <TextView
            android:id="@+id/tvTituloPaso1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Información Personal"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/blue_primary"
            android:layout_marginBottom="32dp"
            android:layout_gravity="center_horizontal"/>

        <!-- Nombre de Usuario -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Cuál es tu nombre?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_on_blue"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BlueEditText"
            android:hint="Ingresa tu nombre"
            android:layout_marginBottom="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtNombreUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="@color/text_on_blue"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Edad -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Cuál es tu edad?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_on_blue"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BlueEditText"
            android:hint="Ingresa tu edad"
            android:layout_marginBottom="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtEdad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/text_on_blue"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Sexo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Cuál es tu sexo?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_on_blue"
            android:layout_marginBottom="12dp"/>

        <RadioGroup
            android:id="@+id/radioSexo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp">

            <RadioButton
                android:id="@+id/rbMasculino"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Masculino"
                android:textSize="16sp"
                android:textColor="@color/text_on_blue"
                android:buttonTint="@color/blue_primary"
                android:padding="12dp"/>

            <RadioButton
                android:id="@+id/rbFemenino"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Femenino"
                android:textSize="16sp"
                android:textColor="@color/text_on_blue"
                android:buttonTint="@color/blue_primary"
                android:padding="12dp"/>

            <RadioButton
                android:id="@+id/rbOtro"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Otro"
                android:textSize="16sp"
                android:textColor="@color/text_on_blue"
                android:buttonTint="@color/blue_primary"
                android:padding="12dp"/>

        </RadioGroup>

        <!-- Botón Siguiente -->
        <Button
            android:id="@+id/btnSiguiente"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="SIGUIENTE"
            style="@style/BlueButton"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</ScrollView>
