<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@drawable/background_app">

    <!-- Contenedor principal con fondo semitransparente para legibilidad -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#E6F0F8FF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center">

            <!-- Logo de la aplicación -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/logo_app"
                android:layout_marginBottom="24dp"
                android:contentDescription="Logo de Planifica Tu Viaje"
                android:scaleType="fitCenter" />

            <!-- Título de registro -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crear Cuenta"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/blue_primary"
                android:layout_marginBottom="40dp"
                android:gravity="center" />

            <!-- Campo de correo electrónico -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/BlueEditText"
                android:hint="Correo electrónico"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/blue_primary"
                app:hintTextColor="@color/blue_primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextRegisterEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/blue_primary_dark" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo de contraseña -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/BlueEditText"
                android:hint="Contraseña"
                android:layout_marginTop="16dp"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/blue_primary"
                app:hintTextColor="@color/blue_primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextRegisterPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="@color/blue_primary_dark" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo de confirmar contraseña -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/BlueEditText"
                android:hint="Confirmar contraseña"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/blue_primary"
                app:hintTextColor="@color/blue_primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="@color/blue_primary_dark" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botón de registro -->
            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrarse"
                style="@style/BlueButton"
                android:layout_marginBottom="16dp"
                android:elevation="4dp" />

            <!-- Link de vuelta al login -->
            <TextView
                android:id="@+id/linkLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Ya tienes cuenta? Inicia sesión"
                android:textColor="@color/blue_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="12dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
