<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/transparent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E6F0F8FF"
        android:padding="24dp"
        android:elevation="4dp">

        <!-- Indicador de Progreso -->
        <TextView
            android:id="@+id/tvProgreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paso 2 de 6"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>

        <!-- Título del Paso -->
        <TextView
            android:id="@+id/tvTituloPaso2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preferencias de Sabores y Clima"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:layout_marginBottom="32dp"
            android:layout_gravity="center_horizontal"/>

        <!-- Sabores -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Qué sabores prefieres? (Puedes seleccionar varios)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp"/>

        <CheckBox
            android:id="@+id/cbDulce"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Dulce"
            android:textSize="16sp"
            android:padding="12dp"/>

        <CheckBox
            android:id="@+id/cbSalado"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Salado"
            android:textSize="16sp"
            android:padding="12dp"/>

        <CheckBox
            android:id="@+id/cbPicante"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Picante"
            android:textSize="16sp"
            android:padding="12dp"/>

        <CheckBox
            android:id="@+id/cbAmargo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Amargo"
            android:textSize="16sp"
            android:padding="12dp"/>

        <CheckBox
            android:id="@+id/cbAgrio"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Agrio"
            android:textSize="16sp"
            android:padding="12dp"/>

        <CheckBox
            android:id="@+id/cbSaboresOtro"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Otro"
            android:textSize="16sp"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/edtSaboresOtro"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Especifica otro sabor"
            android:inputType="text"
            android:background="@drawable/edittext_background"
            android:padding="16dp"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"
            android:visibility="gone"/>

        <!-- Clima -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Qué tipo de clima prefieres?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp"/>

        <RadioGroup
            android:id="@+id/radioClima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp">

            <RadioButton
                android:id="@+id/rbCalido"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Cálido"
                android:textSize="16sp"
                android:padding="12dp"/>

            <RadioButton
                android:id="@+id/rbFrio"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Frío"
                android:textSize="16sp"
                android:padding="12dp"/>

            <RadioButton
                android:id="@+id/rbTemplado"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Templado"
                android:textSize="16sp"
                android:padding="12dp"/>

            <RadioButton
                android:id="@+id/rbHumedo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Húmedo"
                android:textSize="16sp"
                android:padding="12dp"/>

            <RadioButton
                android:id="@+id/rbSeco"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Seco"
                android:textSize="16sp"
                android:padding="12dp"/>

        </RadioGroup>

        <!-- Botones de Navegación -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnAnterior"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="ANTERIOR"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2196F3"
                android:background="@drawable/button_secondary_background"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnSiguiente"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="SIGUIENTE"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_primary_background"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
