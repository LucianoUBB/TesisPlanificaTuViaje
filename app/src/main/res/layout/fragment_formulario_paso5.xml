<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/transparent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E6F0F8FF"
        android:padding="24dp"
        android:elevation="4dp">

        <!-- Indicador de Progreso -->
        <TextView
            android:id="@+id/tvProgreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paso 5 de 6"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>

        <!-- Título del Paso -->
        <TextView
            android:id="@+id/tvTituloPaso5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Planificación y Deportes"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:layout_marginBottom="32dp"
            android:layout_gravity="center_horizontal"/>

        <!-- Planificación -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Cómo prefieres planificar tu viaje?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp"/>

        <RadioGroup
            android:id="@+id/radioPlanificacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/rbEspontaneo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Espontáneo"
                android:textSize="16sp"
                android:padding="12dp"/>

            <RadioButton
                android:id="@+id/rbPlanificado"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Planificado"
                android:textSize="16sp"
                android:padding="12dp"/>

            <RadioButton
                android:id="@+id/rbMixto"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Mixto"
                android:textSize="16sp"
                android:padding="12dp"/>

        </RadioGroup>

        <!-- Deportes -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Qué deportes practicas o te interesan? (Puedes seleccionar varios)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp"/>

        <CheckBox
            android:id="@+id/cbFutbol"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Fútbol"
            android:textSize="16sp"
            android:padding="12dp"/>

        <CheckBox
            android:id="@+id/cbBasket"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Básquet"
            android:textSize="16sp"
            android:padding="12dp"/>

        <CheckBox
            android:id="@+id/cbTenis"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Tenis"
            android:textSize="16sp"
            android:padding="12dp"/>

        <CheckBox
            android:id="@+id/cbNatacion"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Natación"
            android:textSize="16sp"
            android:padding="12dp"/>

        <CheckBox
            android:id="@+id/cbGimnasio"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Gimnasio"
            android:textSize="16sp"
            android:padding="12dp"/>

        <CheckBox
            android:id="@+id/cbCorrer"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Correr"
            android:textSize="16sp"
            android:padding="12dp"/>

        <CheckBox
            android:id="@+id/cbCiclismo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Ciclismo"
            android:textSize="16sp"
            android:padding="12dp"/>

        <CheckBox
            android:id="@+id/cbSenderismo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Senderismo"
            android:textSize="16sp"
            android:padding="12dp"/>

        <CheckBox
            android:id="@+id/cbDeportesOtro"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Otro"
            android:textSize="16sp"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/edtDeportesOtro"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Especifica otro deporte"
            android:inputType="text"
            android:background="@drawable/edittext_background"
            android:padding="16dp"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"/>

        <CheckBox
            android:id="@+id/cbNinguno"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Ninguno"
            android:textSize="16sp"
            android:textStyle="italic"
            android:padding="12dp"
            android:layout_marginTop="8dp"/>

        <!-- Botones de Navegación -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp">

            <Button
                android:id="@+id/btnAnterior"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="ANTERIOR"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2196F3"
                android:background="@drawable/button_secondary_background"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnSiguiente"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="SIGUIENTE"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_primary_background"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
