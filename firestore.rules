rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir acceso a usuarios autenticados para leer/escribir sus propios datos
    match /usuarios/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Sub-colecciones del usuario (preferencias, rutas, etc.)
      match /{subcollection=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Para desarrollo: permitir todas las operaciones (cambiar en producci√≥n)
    // match /{document=**} {
    //   allow read, write: if true;
    // }
  }
}
